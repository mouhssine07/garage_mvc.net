@model List<garage.Models.Cart>
@using System.Globalization

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Panier</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <main>
        <h1>Votre Panier</h1>
        <section class="cart-list" id="cart-list">
            @if (Model == null || Model.Count == 0)
            {
                <p>Votre panier est vide.</p>
            }
            else
            {
                var cultureInfo = new CultureInfo("fr-MA");
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Quantité</th>
                            <th>Prix</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@item.Product?.Photo" data-gallery="portfolio-gallery-@(item.Product?.Cat?.Name?.ToLower() ?? "unknown")" class="glightbox">
                                        <img src="@item.Product?.Photo" class="img-fluid" alt="">
                                    </a>
                                    <div>
                                        <h4>@item.Product?.Name</h4>
                                        <p>@item.Product?.Description</p>
                                    </div>
                                </td>
                                <td>@item.Qty</td>
                                <td>@(item.Product?.Price?.ToString("C", cultureInfo) ?? "N/A")</td>
                                <td>
                                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.Product?.Id" />
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            <a href="#" id="save-cart" class="btn btn-primary" style="display: block; text-align: center; margin-top: 20px;">commander maintenant</a>
        </section>
    </main>
    <partial name="_LoginPartial" />
    <style>
        main {
            padding: 40px;
            background: linear-gradient(135deg, #f6f8fd 0%, #ffffff 100%);
        }

        h1 {
            color: #2c3e50;
            font-size: 2.5em;
            margin-bottom: 30px;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 2px;
            border-bottom: 3px solid #3498db;
            padding-bottom: 10px;
        }

        .cart-list {
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 25px;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 15px;
        }

            .table thead tr {
                background: #3498db;
                color: white;
            }

            .table th {
                padding: 15px;
                text-align: left;
                font-size: 1.1em;
                font-weight: 600;
                text-transform: uppercase;
            }

            .table tbody tr {
                background: #f8f9fa;
                transition: transform 0.3s ease;
            }

                .table tbody tr:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                }

            .table td {
                padding: 20px 15px;
                vertical-align: middle;
            }

                .table td img {
                    width: 100px;
                    height: 100px;
                    object-fit: cover;
                    border-radius: 8px;
                    margin-right: 15px;
                }

                .table td h4 {
                    color: #2c3e50;
                    margin: 0 0 5px 0;
                    font-size: 1.2em;
                }

                .table td p {
                    color: #7f8c8d;
                    margin: 0;
                    font-size: 0.9em;
                }

        .btn-danger {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .btn-danger:hover {
                background: #c0392b;
            }

        #save-cart {
            background: #2ecc71;
            color: white;
            text-decoration: none;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.2em;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            border: none;
            margin-top: 30px;
            display: inline-block;
        }

            #save-cart:hover {
                background: #27ae60;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3);
            }

        .empty-cart {
            text-align: center;
            color: #7f8c8d;
            font-size: 1.2em;
            padding: 50px 0;
        }

        td:first-child {
            display: flex;
            align-items: center;
        }

        td div {
            margin-left: 15px;
        }

        .price {
            font-size: 1.2em;
            color: #e74c3c;
            font-weight: bold;
        }

        /* Style for the quantity */
        td:nth-child(2) {
            font-size: 1.1em;
            font-weight: 600;
            color: #34495e;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('save-cart').addEventListener('click', function (event) {
                event.preventDefault();
                fetch('/Cart/SaveCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                }).then(response => {
                    if (response.ok) {
                        alert('Cart saved successfully');
                        location.reload();
                    } else {
                        alert('Failed to save cart');
                    }
                });
            });
        });
    </script>
</body>
</html>
