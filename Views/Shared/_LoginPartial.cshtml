@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav custom-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User); // Store the user ID in a variable
        <li class="nav-item custom-nav-item">
            <a class="nav-link custom-nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item custom-nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link custom-nav-link mt-2">Logout</button>
            </form>
        </li>
    }
</ul>

<style>
    .custom-nav {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 10px;
        border-radius: 5px;
    }

    .custom-nav-item {
        margin-left: 15px;
    }

    .custom-nav-link {
        color: #ffffff;
        background-color: #5a2a8a;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

        .custom-nav-link:hover {
            background-color: #ffffff;
            color: #5a2a8a;
        }
</style>

